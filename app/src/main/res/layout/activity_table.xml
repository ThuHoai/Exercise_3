<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:stretchColumns="2"
    tools:context="com.hoaiutc95.exercise_3.TableActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnColor1"
            android:text="Color 1"
            android:textAllCaps="false"
            android:textColor="@color/color_red" />

        <Button
            android:id="@+id/btnColor2"
            android:text="Color 2"
            android:textAllCaps="false"
            android:textColor="@color/color_yel" />

        <Button
            android:id="@+id/btnColor3"
            android:text="Color 3"
            android:textAllCaps="false"
            android:textColor="@color/color_blue" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_height="50dp"
            android:layout_span="3"
            android:background="@color/color_yel" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btnClear"
            android:layout_column="2"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/color_black" />
    </TableRow>

</TableLayout>
